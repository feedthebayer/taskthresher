<section id="user-form">
  <div class="row">
    <header class="content">
      <h1>Sign In</h1>
    </header>
  </div>
  <div class="row">
    <%= form_for :session, url: session_path do |form| %>
      <%= render partial: '/users/form', object: form %>
      <div class="row">
        <div class="small-11 medium-7 large-5 small-centered columns">
          <%= form.submit "Sign In", class: "button secondary expand" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <section class="reset-content">
      <small>
        <%= link_to "Forgot your password?", new_password_path %>
      </small>
    </section>
  </div>
</section>

<% @sign_in_page = true %>
